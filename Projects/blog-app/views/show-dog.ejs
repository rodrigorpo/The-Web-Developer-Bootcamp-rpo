<% include partials/header %>


<div class="container" style="margin-top: 80px; width: 800px">
    <h1><strong>
            <%=dog.title%></strong>
    </h1>
    <div class="container border rounded p-2">
        <img src="<%=dog.image%>" class="img-thumbnail rounded" style="width: 100%; max-height: 500px;">
        <div class="flex-column pl-4">

            <h5 class="text-muted">
                <%=dog.created%>
            </h5>
            <h5 class="text-body">
                <%=dog.body%>
            </h5>
            <div class="d-flex flex-row justify-content-center">
                <a href="/dogs/<%=dog._id%>/edit" class="btn btn-outline-warning mr-4">Update Dog</a>
                <form method="DELETE">
                    <button href="/dogs/<%=dog._id%>" class="btn btn-outline-danger ml-4">Delete Dog</button>
                </form>
            </div>
        </div>
    </div>
</div>
</div>

<% include partials/footer %>