<% include ../partials/header %>
<div class="container">
    <div class="jumbotron text-center">
        <h1 class="display-4">Create a New Campground</h1><br /><br />
        <div class="container text-center">
            <form class="form" action="/campgrounds" method="POST">
                <div class="d-flex flex-column align-items-center">
                    <div class="form-group">
                        <input class="form-control" name="name" style="width: 400px" type="text" class="form-control" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="img" style="width: 400px" type="text" class="form-control" placeholder="Image Url"><br />
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="description" style="width: 400px" type="text" class="form-control" placeholder="Description"><br />
                    </div>
                    <div class="container d-flex justify-content-center">
                        <a href="/campgrounds" class="btn btn-large btn-primary mr-4">Back to campgrounds</a>
                        <input class="btn btn-large btn-primary ml-4" type="submit" value="Create new Campground">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>