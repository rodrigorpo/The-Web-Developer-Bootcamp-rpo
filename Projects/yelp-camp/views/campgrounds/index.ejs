<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container text-center">
            <h1 class="display-3">Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>
</div>

<div class="container">
    <div class="row">
        <% campgrounds.forEach(function(obj){ %>
        <div class="card col-sm-6 col-md-3 m-4">
            <img class="card-img-top" src="<%=obj.image%>">
            <div class="card-body d-flex align-items-center justify-content-end flex-column flex-wrap">
                <h5 class="card-title">
                    <%=obj.name%>
                </h5>
                <a href="/campgrounds/<%= obj._id %>" class="btn btn-primary">More info</a>
            </div>
        </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>