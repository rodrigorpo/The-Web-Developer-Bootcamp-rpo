<% include partials/header %>
<h1><%= message %></h1>
<div class="container">
    <div class="jumbotron text-center">
        <h1 class="display-4">Login!</h1>
        <div class="container ml-4">
            <form class="form mt-4" action="/login" method="POST">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" for="exampleFormControlTextarea1">Username</label>
                    <input class="form-control col-sm-4" type="text" name="username">
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" for="password">Password</label>
                    <input class="form-control col-sm-4" type="password" name="password">
                </div>
                <div class="form-group d-flex justify-content-center">
                    <input class="btn btn-large btn-primary ml-4 px-4" type="submit" value="Submit">
                </div>
            </form>
        </div>
    </div>
</div>


<% include partials/footer %>