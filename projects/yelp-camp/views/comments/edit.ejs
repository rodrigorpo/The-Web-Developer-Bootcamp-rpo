<% include ../partials/header %>
<div class="container">
    <div class="jumbotron text-center">
        <h1 class="display-4">Editing Comment</h1><br /><br />
        <div class="container text-center">
            <form class="form" action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="d-flex flex-column align-items-center">
                    <div class="form-group">
                        <label for="exampleFormControlTextarea2">Comment</label>
                        <textarea name="comment[text]" class="form-control" style="width: 400px" id="text"
                            rows="7"><%= comment.text %></textarea>
                    </div>
                    <div class="container d-flex justify-content-center">
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-large btn-primary mr-4">Back to
                            campground</a>
                        <input class="btn btn-large btn-primary ml-4" type="submit" value="Edit comment">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %></form>