<% include partials/header %>
<style>
body {
    background-image: url("https://st2.depositphotos.com/2627989/5794/i/950/depositphotos_57948859-stock-photo-black-forest.jpg");
    background-repeat: no-repeat;
    background-size: cover;
    height: 100%; 
}
</style>
<div id="header" class="container text-center mt-2">
    <div class=" row">
        <div class="col-11">
            <h1 style="color: lightslategray" class="display-1">Discover Campgrounds!</h1>
        </div>
        <div class="col-1"><a href="/campgrounds"><i style="color: lightslategray; font-size: 80px"
                    class="fas fa-arrow-right mt-4"></i></a></div>
    </div>
</div>

<div id="carouselExampleIndicators" class="carousel slide mx-auto" data-ride="carousel"
    style="width: 700px; height: 500px">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100"
                src="https://www.nps.gov/shen/planyourvisit/images/20170712_A7A9022_nl_Campsites_BMCG_960.jpg?maxwidth=1200&maxheight=1200&autorotate=false"
                alt="First slide" style="width: 700px; height: 500px;">
            <div class="carousel-caption d-none d-md-block">
                <h5>First Campground!</h5>
                <p>This is a nice place to know</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100"
                src="https://newhampshirestateparks.reserveamerica.com/webphotos/NH/pid270015/0/540x360.jpg"
                alt="Second slide" style="width: 700px; height: 500px;">
            <div class="carousel-caption d-none d-md-block">
                <h5>Second Campground!</h5>
                <p>This is a nice place to know</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100"
                src="http://haulihuvila.com/wp-content/uploads/2012/09/hauli-huvila-campgrounds-lg.jpg"
                alt="Third slide" style="width: 700px; height: 500px;">
            <div class="carousel-caption d-none d-md-block">
                <h5>Third Campground!</h5>
                <p>The dog is so nice!!!</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

