<% include ../partials/header %>
<div class="container">
    <div class="jumbotron text-center">
        <h1 class="display-4">Edit <%= campground.name %></h1><br /><br />
        <div class="container text-center">
            <form class="form" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="d-flex flex-column align-items-center">
                    <div class="form-group">
                        <input class="form-control" name="campground[name]" style="width: 400px" type="text"
                            class="form-control" placeholder="Name" value="<%= campground.name %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="campground[image]" style="width: 400px" type="text"
                            class="form-control" placeholder="Image Url" value="<%= campground.image %>"><br />
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="campground[description]" style="width: 400px" type="text"
                            class="form-control" placeholder="Description" value="<%= campground.description %>"><br />
                    </div>
                    <div class="container d-flex justify-content-center">
                        <a href="/campgrounds" class="btn btn-large btn-primary mr-4">Back to campgrounds</a>
                        <input class="btn btn-large btn-primary ml-4" type="submit" value="Update Campground">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>